{
	"name": "Heroku aria2c",
	"description": "Run aria2c on heroku",
	"repository": "https://github.com/moeik/heroku-aria2",
	"keywords": ["aria2c"],
	"env": {
		"HEROKU_APP_NAME": {
			"description": "This should be the same as \"App name\" above."
		},
		"ARIA2C_SECRET": {
			"description": "Aria2c's secret",
			"value": "这里填写后台密码"
		},
		"RCLONE_CONFIG": {
			"description": "Rclone的配置文件，将\n添加到每个换行符的位置",
			"required": false,
		},
		"RCLONE_DESTINATION": {
			"description": "填写一个OneDrive上传路径",
			"required": false,
			"value": "如：/update"
		}
	},
	"buildpacks": [
		{
			"url": "heroku/nodejs"
		}
	]
}
